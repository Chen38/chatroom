doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no")
		title AlaChat
		link(rel="icon", href="/faviocn.ico")
		link(rel="stylesheet", href="/dist/css/main.css")
	body
		
		#app(v-cloak, @click="showEmojisTable")
			.enter_nickname(v-show="isNicknameShow")
				.form
					p PLEASE ENTER YOUR NAME
					input.nickname(type="text", name="nickname", maxlength="20", autofocus, v-model="nickname", @keydown.13.prevent="confirmNickname")
					br
					input.confirm(type="button", name="confirm", value="CONFIRM", @click.prevent="confirmNickname")
					p.warn.tc(v-show="isWarnShow") {{confirmResult}}
			.container
				.wrapper.bc(:class="animateObject")
					.whoiam.bc
						span.name.fl {{nickname}}
						transition(name="fade")
							span.info(v-show="isInfoShow") {{info}}
						b.p_count.p_text.fr {{people}}
						span.p_text.fr Online:&nbsp;&nbsp;
					.messages.bc
						.inner
							//- transition(name="fade")
							.scroller
								p.msg.clearfix(v-for="item in contents")
									span.join(v-if="item.isJoinShow") {{item.nickname}}
									span(v-else, v-html="item.msg", :class="[item.isYou ? rightClass : leftClass]")
					.emoji
						i.em.all(@click.stop="showEmojisTable")
						i.em.shake_btn(@click.prevent="shakeWindow")
						i.em.image
							input.file(type="file", name="file", accept="images/*", @click="sendImage")
						.table.clearfix(v-show="isEmojisShow")
							i(v-for="(emoji, index) in emojis", :class="emoji.className", :title="emoji.title", @click.prevent="chooseEmoji(index)")
					.text.bc
						textarea.input(name="input", placeholder="SEND MY MESSAGE", autofocus, v-model="typeMessage", @keydown.13.prevent="sendMessage")
						//- input.send(type="button", name="send", value='SEND', @click.prevent="sendMessage")
				p.tip Enter to send, Ctrl + Enter to wrap.
		//- script(type="text/javascript" src="/dist/js/app.min.js")
		script(type="text/javascript" src="/dist/js/lib.min.js")
		script(type="text/javascript" src="/js/chat.js")