doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no")
		title AlaChat
		link(rel="icon", href="/faviocn.ico")
		link(rel="stylesheet", href="/css/main.css")
	body
		#app(v-cloak)
			.enter_nickname.ghost
				form
					p PLEASE ENTER YOUR NAME
					input.nickname(type="text", name="nickname", maxlength="20", autofocus, v-model="nickname")
					br
					input.confirm(type="button", name="confirm", value="CONFIRM")
			.container
				.wrapper.bc
					.whoiam.bc
						span.name.fl {{nickname}}
						span.info
						b.p_count.p_text.fr 0
						span.p_text.fr Online:&nbsp;&nbsp;
					.messages.bc
						.inner.clearfix
							ul.left.fl
								li(v-for="item in others") {{item}}
									dt {{someone}}
							ul.right.fr
								li(v-for="item in yours") {{item}}
									dt Me
					.emoji
						i.em.all
						i.em.shake
						i.em.image
							input.file(type="file", name="file", accept="images/*")
						.table.clearfix.ghost
					.text.bc
						textarea.input(name="input", placeholder="SEND MY MESSAGE", autofocus)
						input.send(type="button", name="send", value='SEND')
				p.tip Enter to send, Ctrl + Enter to wrap.
		script(type="text/javascript" src="/dist/js/lib.min.js")
		script(type="text/javascript" src="/js/chat.js")